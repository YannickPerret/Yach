datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Calendar {
  id        String   @id @default(uuid())
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[] 
}

model Event {
  id          String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  summary       String 
  sequence      Int?
  status        String?
  transp        String?
  rRule         String?
  start         String
  end           String
  drStamp       String
  categories    String?
  location      String?
  geo           String?
  description   String?
  url           String?
  calendar      Calendar @relation(fields: [calendarId], references: [id])
  calendarId    String 

  @@index([calendarId])
}